@using PierresVendorApp.Models;

@{
  ViewData["Title"] = "@Model.vendor.Name - Order @Model[\"order\"].Id";
}

<div class="container-fluid wrapper">
  <h2 class="text-center pt-5 pb-3">Vendor Details</h2>
  <div class="container">
    <div class="row">
      <div class="col-sm-2">Vendor ID</div>
      <div class="col-sm-10">Vendor Name</div>
    </div>
    <div class="row">
      <div class="col-sm-2">@Model["vendor"].Id</div>
      <div class="col-sm-10">@Model["vendor"].Name</div>
      @* @Model["vendor"].Description *@
    </div>
    <h2 class="text-center pt-5 pb-3">Order Details</h2>
    <div class="row">
      <div class="col-sm-1">ID</div>
      <div class="col-sm-3">Title</div>
      <div class="col-sm-3">Date</div>
      <div class="col-sm-2">Price</div>
      <div class="col-sm-3">Description</div>
    </div>
    <div class="row">
      <div class="col-sm-1">@Model["order"].Id</div>
      <div class="col-sm-3">@Model["order"].Title</div>
      <div class="col-sm-3">@Model["order"].OrderPlacedDate</div>
      <div class="col-sm-2">$@Model["order"].Price</div>
      <div class="col-sm-3">@Model["order"].Description</div>
    </div>
  </div>
    @* <a class="btn btn-block btn-lg btn-outline-info m-4" href='/vendors/@Model["vendor"].Id/'>View @Model.vendor.Name Business Details</a> *@
</div>
