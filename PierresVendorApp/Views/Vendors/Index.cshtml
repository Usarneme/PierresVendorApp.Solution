@using PierresVendorApp.Models;

@{
  ViewData["Title"] = "Vendors Page";
}

<div class="text-center">
  <h1 class="display-4">Welcome, Pierre's Bakery Staff</h1>
  <div class="container">
    <div class="row">
      @if (@Model.Count == 0)
      {
        <h3>No Vendors Found</h3>
      }
      else
      {
        @foreach (Vendor aVendor in Model)
        {
          <div class="container">
            <div class="card">
              <h3>@aVendor.Name</h3>
              <div class=""><a href="/vendors/@aVendor.Id/">Click To View Details and Orders</a></div>
            </div>
          </div>
        }
      }
    </div>
    <hr class="border-bottom" />
    <div class="container"><a class="btn btn-lg btn-block btn-outline-info" href="/vendors/new">Click here</a> to add a new vendor.</div>
  </div>
</div>
